- image_link = link_to('Pe≈Çen opis', postcard_path(postcard))
- gallery_name ||= ''
- image_parameters ||= {}
- abverse ||= true

- if abverse
  %a{ href: postcard_abverse_image_url(postcard, :normal), rel: "shadowbox[#{gallery_name}];title=#{image_link}" }
    = image_tag postcard_abverse_image_url(postcard, :thumbnail), image_parameters
- else
  %a{ href: postcard_reverse_image_url(postcard, :normal), rel: "shadowbox[#{gallery_name}];title=#{image_link}" }
    = image_tag postcard_reverse_image_url(postcard, :thumbnail), image_parameters

