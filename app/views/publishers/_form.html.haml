- content_for :head do
  = javascript_include_tag 'tiny_mce/tiny_mce'
  :javascript
    $(document).ready(function() {
      tinyMCE.init({
        mode: 'textareas',
        language: '#{I18n.locale}'
      });
    });

= form_for(@publisher) do |f|
  - if @publisher.errors.any? 
    %ul
      - @publisher.errors.full_messages.each do |e|
        %li= e

  .field
    = f.label :name, t('activerecord.attributes.publisher.name')
    = f.text_field :name, class: 'form-full-width'
  .field
    = f.label :description, t('activerecord.attributes.publisher.description')
    = f.text_area :description, class: 'form-full-width'
  = f.submit button_label, class: 'button'
