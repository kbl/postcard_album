<% content_for :slider do %>
  <ul class="slider">
    <% @newest_postcards.each do |p| %>
      <%= content_tag('li', image_tag(postcard_abverse_image_url(p, :normal), :width => 300, :height => 207, :style => 'border: 0px')) %>
    <% end %>
  </ul>
<% end %>
<%= render '/postcards/postcard', :p => @postcard if @postcard %>
