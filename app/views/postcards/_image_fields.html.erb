<p class="image_fields">
  <%= f.label :type_of_image, 'Zdjęcie widokówki' %>
  <% if true %>
    <%= image_tag(f.object.image.url(f.object.thumbnail_style)) %>
  <% else %>
    <%= f.select :type_of_image, Image::IMAGE_TYPES %>
    <%= f.file_field :image %>
  <% end %>
  <%= f.hidden_field :_destroy %>
  <%= link_to_function 'usuń', 'removeImage(this)' %>
</p>
