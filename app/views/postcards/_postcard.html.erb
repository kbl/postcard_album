<% content_for :head do %>
  <%= javascript_include_tag 'shadowbox', :cache => true %>
  <%= javascript_include_tag 'http://maps.google.com/maps?file=api&v=2&key=ABQIAAAAkgCxzvIpiJvYgOSyqIcUrBTWWMYKP7J82jUjllpaxquYJgrbrBQ5wBmh8LFqk2w_zzmkps4hMATjdw&hl=pl' %>
  <script type="text/javascript">
    $(document).ready(function() { 
        setUpShadowbox(); 
        <% unless p.longitude.blank? %>
          <%= draw_google_map p, false %>
        <% end %>
    });
  </script>
<% end %>

<h3 class="postcard-heading"><%=h p.name %></h3>
<table>
  <tbody>
    <tr>
      <td style="width: 20%"><%= t 'activerecord.attributes.postcard.description' %></td>
      <td><%= p.description %></td>
    </tr>
    <tr>
      <td><%= t 'activerecord.attributes.postcard.year' %></td>
      <td><%=h p.year %></td>
    </tr>
    <tr>
      <td><%= t 'activerecord.attributes.postcard.tags' %></td>
      <td><%=h p.tags.join(', ') %></td>
    </tr>
    <% if p.publisher %>
      <tr>
        <td><%= t 'activerecord.attributes.postcard.publisher_id' %></td>
        <td><%=h p.publisher.name %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= t 'activerecord.attributes.postcard.images' %></td>
      <td>
        <div>
          <% postcard_images_lightbox(p.images, :class => 'lightbox', :rel => 'shadowbox') %>
        </div>
      </td>
    </tr>
    <% unless p.longitude.blank? %>
      <tr>
        <td colspan="2"><%= t :v_postcards_map %></td>
      </tr>
      <tr>
        <td colspan="2">
          <div id="map"></div>
        </td>
      </tr>
    <% end %>
    <% if current_user %>
      <tr>
        <th class="important" /> 
        <td>
          <%= link_to t(:v_edit), edit_postcard_path(@postcard) %>
          <%= link_to t(:v_delete), @postcard, :method => :delete, :confirm => t(:v_delete_confirmation) %>
      </tr>
    <% end %>
  </tbody>
</table>

</p>

