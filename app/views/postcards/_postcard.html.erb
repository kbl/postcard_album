<% content_for :head do %>
  <%= stylesheet_link_tag 'default', 'shadowbox' %>
  <%= javascript_include_tag 'shadowbox', :cache => true %>
  <%= javascript_include_tag 'http://maps.google.com/maps?file=api&v=2&key=ABQIAAAAkgCxzvIpiJvYgOSyqIcUrBTWWMYKP7J82jUjllpaxquYJgrbrBQ5wBmh8LFqk2w_zzmkps4hMATjdw&hl=pl' %>
  <script type="text/javascript">
    $(document).ready(function() { 
        setUpShadowbox(); 
        drawGoogleMap(<%= p.latitude %>, <%= p.longitude %>);
        $('#toggleMap').click(function () {
          $('#map').toggle('slow')
        });
        $('#map').hide();
    });
  </script>
<% end %>

<h3 class="postcard-heading"><%=h p.name %></h3>
<table>
  <tbody>
    <tr>
      <th style="width: 20%">Opis</th>
      <td><%= p.description %></td>
    </tr>
    <tr>
      <th>Data widokówki</th>
      <td><%=h p.photo_date %></td>
    </tr>
    <tr>
      <th>Zdjęcia widokówki</th>
      <td>
        <div>
          <% p.images.each do |i| %>
            <% link_to i.image.url(i.normal_style), :class => 'lightbox', :rel => 'shadowbox' do %>
              <%= image_tag i.image.url(i.thumbnail_style) %>
            <% end %>
          <% end %>
        </div>
      </td>
    </tr>
    <% if p.longitude %>
      <tr>
        <th>Położenie</th>
        <td><span class="toggle-link" id="toggleMap">Pokaż\ukryj mapę</span><div id="map"></div>
        </td>
      </tr>
    <% end %>
    <tr>
      <th class="important">Akcja</th> 
      <td>
        <%= link_to 'Edytuj', edit_postcard_path(@postcard) %>
        <%= link_to 'Usuń', @postcard, :method => :delete, :confirm => 'Czy rzeczywiście chcesz to usunąć?' %>
    </tr>
  </tbody>
</table>

</p>

